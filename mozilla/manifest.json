{
  "manifest_version": 2,
  "name": "YouTube Shorts and News Blocker",
  "version": "1.0",
  "description": "Blocks the Shorts and News sections on YouTube.",
  "permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}

